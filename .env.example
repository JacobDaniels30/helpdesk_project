# Flask Helpdesk Application - Environment Variables
# Copy this file to .env and update with your actual values

# ===================================================================
# CORE FLASK CONFIGURATION
# ===================================================================
FLASK_ENV=production
SECRET_KEY=your-secret-key-here
DEBUG=False

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your-secure-database-password
DB_NAME=helpdesk
DB_PORT=3306

# ===================================================================
# SESSION SECURITY SETTINGS
# ===================================================================
# These are automatically set in app.py based on FLASK_ENV
# SESSION_COOKIE_SECURE=true (set automatically in production)
# SESSION_COOKIE_HTTPONLY=true (always set)
# SESSION_COOKIE_SAMESITE=Lax (always set)
# SESSION_COOKIE_NAME=helpdesk_session (always set)
# PERMANENT_SESSION_LIFETIME=24 hours (always set)

# ===================================================================
# EMAIL CONFIGURATION
# ===================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER_NAME=Helpdesk Support
MAIL_DEFAULT_SENDER_EMAIL=your-email@gmail.com

# ===================================================================
# SECURITY SETTINGS
# ===================================================================
# Rate limiting and security configurations
RATELIMIT_STORAGE_URL=memory://

# ===================================================================
# PRODUCTION SETTINGS
# ===================================================================
# Set to production for secure session settings
FLASK_ENV=production

# ===================================================================
# DEVELOPMENT SETTINGS (uncomment for development)
# ===================================================================
# FLASK_ENV=development
# DEBUG=True
